<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pokemongo.activites.PokemonDetailsActivity">
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0"
    >
<TableRow
    android:layout_height="170dp"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/imagePokemon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/nomPokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imagePokemon"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/type1Pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/imagePokemon"
            android:layout_below="@id/nomPokemon"
            />
        <TextView
            android:id="@+id/type2Pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/nomPokemon"
            android:layout_toRightOf="@id/type1Pokemon"
            />
        <TextView
            android:id="@+id/niveauPokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/type1Pokemon"
            android:layout_toRightOf="@id/imagePokemon"
            />
        <TextView
            android:id="@+id/expPokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/niveauPokemon"
            android:layout_toRightOf="@id/imagePokemon"
            />
        </RelativeLayout>

</TableRow>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="25dp">
    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/attaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_column="1"/>
            <TextView
                android:id="@+id/attaqueSpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/vitesse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_column="1"/>
            <TextView
                android:id="@+id/defenseSpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                />
        </TableRow>
    </TableLayout>

</TableRow>
<TableRow
    android:layout_marginTop="25dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attaques : "
        android:textStyle="bold"
        />
</TableRow>
    <TableRow
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_rectangle">
                <TextView
                    android:id="@+id/nomAttaque1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/typeAttaque1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/nomAttaque1"
                    />
                <TextView
                    android:id="@+id/descriptionAttaque1"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="false"
                    android:layout_below="@id/nomAttaque1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_rectangle">
                <TextView
                    android:id="@+id/nomAttaque2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/typeAttaque2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/nomAttaque2"
                    />
                <TextView
                    android:id="@+id/descriptionAttaque2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="false"
                    android:layout_below="@id/nomAttaque2"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_rectangle">
                <TextView
                    android:id="@+id/nomAttaque3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/typeAttaque3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/nomAttaque3"
                    />
                <TextView
                    android:id="@+id/descriptionAttaque3"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/nomAttaque3"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_rectangle">
                <TextView
                    android:id="@+id/nomAttaque4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/typeAttaque4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/nomAttaque4"
                    />
                <TextView
                    android:id="@+id/descriptionAttaque4"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/nomAttaque4"
                    />
            </RelativeLayout>
        </LinearLayout>
    </TableRow>
</TableLayout>
</ScrollView>
